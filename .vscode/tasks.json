{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "findIndexHtml",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$paths = @('E:\\ojpitre-www\\index.html', 'D:\\ojpitre-www\\index.html'); foreach ($path in $paths) { if (Test-Path $path) { Start-Process $path; break } else { Write-Host \"Path not found: $path\" } }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
